<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.AdminAddProductActivity">

    <ImageView
        android:id="@+id/InputProductImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/addpic" />

    <EditText
        android:id="@+id/InputProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/InputProductImage"
        android:layout_marginTop="40dp"
        android:inputType="textMultiLine"
        android:padding="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="Product Name"
        />

    <EditText
        android:id="@+id/InputProductDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/InputProductName"
        android:layout_marginTop="5dp"
        android:inputType="textMultiLine"
        android:padding="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="Product Description"
        />

    <EditText
        android:id="@+id/InputProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/InputProductDescription"
        android:layout_marginTop="5dp"
        android:inputType="textMultiLine"
        android:padding="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="Product Price"
        />

    <Button
        android:id="@+id/AddNewProductButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/InputProductPrice"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/ic_round_button"
        android:text="Add Product"
        android:layout_marginTop="50dp"
        android:textSize="18sp"

        />

</RelativeLayout>